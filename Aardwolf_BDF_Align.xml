<aliases>
  <alias
   name="myalign"
   match="myalign"
   enabled="y"
   group="charstatus"
   send_to="12"
   sequence="100"
  >
  <send>require 'gmcphelper'
require 'tprint'
align = 0
chan = "say"

gmcpstatus = gmcp("char.status") 
align=tonumber(gmcpstatus.align)
print("Current align is: ", align)
if align &gt; 874 then
 Execute(chan .." You are a twinky goodie, Align is: ".. align)
elseif align &gt; -874 then
 Execute(chan .." You can't make up your mind, Align is: "..  align)
else
 Execute(chan .." You are evil af, Align is: ".. align)
end</send>
  </alias>
</aliases>

